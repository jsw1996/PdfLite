{
  "name": "@pdfviewer/pdfium-wasm",
  "version": "1.0.0",
  "description": "PDFium compiled to WebAssembly using Emscripten",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./pdfium.wasm": "./wasm/pdfium.wasm",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "wasm"
  ],
  "scripts": {
    "build": "pnpm run build:wasm && pnpm run build:ts",
    "build:wasm": "powershell -ExecutionPolicy Bypass -File ./build.ps1",
    "build:ts": "tsc",
    "dev": "tsc -w --preserveWatchOutput",
    "build:docker": "docker build -t pdfium-wasm-builder ./build",
    "run:docker": "docker run --rm -v \"%cd%/wasm:/build/output\" pdfium-wasm-builder",
    "docker": "pnpm run build:docker && pnpm run run:docker",
    "clean": "rimraf dist wasm"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pdfviewer/pdfviewer.git",
    "directory": "packages/pdfium-wasm"
  },
  "author": "PdfViewer Team",
  "bugs": {
    "url": "https://github.com/pdfviewer/pdfviewer/issues"
  },
  "homepage": "https://github.com/pdfviewer/pdfviewer/tree/main/packages/pdfium-wasm#readme",
  "devDependencies": {
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "pdfium",
    "wasm",
    "webassembly",
    "pdf",
    "emscripten"
  ],
  "license": "Apache-2.0"
}
