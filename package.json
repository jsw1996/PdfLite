{
  "name": "pdfviewer",
  "version": "1.0.0",
  "private": true,
  "description": "Web PDF Viewer with PDFium",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "dev": "pnpm -r run dev",
    "dev:viewer": "pnpm exec turbo dev --parallel --filter=pdf-viewer --filter=@pdfviewer/controller --filter=@pdfviewer/pdfium-wasm --filter=@pdfviewer/ui",
    "build": "pnpm exec turbo build",
    "commit": "git-cz",
    "prepare": "husky",
    "build:pdfium": "pnpm --filter @pdfviewer/pdfium-wasm build"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.7.4",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "packageManager": "pnpm@8.12.0"
}
